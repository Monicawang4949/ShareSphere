<div class="container-fluid text-center" style="color: white">
  <div class="row">

    <div class="col-md-2 offset-md-1">
      <%= render 'admin/users/sidebar' %>
    </div>

    <div class="col-md-8">
      <div class="row">
        <h2 class="col-md-5 p-4">ユーザーいいねをした投稿一覧</h2>
      </div>

      <div class="row">
        <% @user_favorites.each do |user_favorite| %>
          <div class="d-flex flex-row pt-3">
            <div class="card" style="width: 18rem; background: rgba(0, 0, 0, 0)">
              <%= link_to admin_post_path(user_favorite.post_id) do %>
                <%= image_tag user_favorite.post.get_post_image, style: "border-radius: 15%; width: 200px; height: 200px; object-fit:cover;", class: "hover-zoom mb-3 card-img-top" %>
              <% end %>
              <div class="card-body">
                <h5 class="card-title">
                  <%= link_to admin_user_path(user_favorite.post.user), style: " text-decoration: none;color: #0dcaf0" do %>
                    <%= image_tag user_favorite.post.user.get_profile_image, class: "rounded-circle mx-3", size:'30x30' %>
                    <%= user_favorite.post.user.name %>
                  <% end %>
                </h5>
                <p class="card-text">
                  <p><%= user_favorite.post.title %></p>
                  <p>
                  <% user_favorite.post.tags.each do |tag| %>
                    <%= link_to admin_post_tag_posts_path(tag), style: "color: #0dcaf0; text-decoration: none;" do %>
                      <i class="fa-solid fa-hashtag" style="color: #74C0FC;"></i><%= tag.name %>
                    <% end %>
                  <% end %>
                  </p>
                  <p>コメント（<%= user_favorite.post.comments.count %>）</p>
                  <p>いいね（<%= user_favorite.post.favorites.count %>）</p>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>

    </div>

  </div>
</div>