<div class="container-fluid text-center" style="color: white">
  <div class="row">

    <div class="col-md-2 offset-md-1">
      <%= render 'admin/users/sidebar' %>
    </div>

    <div class="col-md-5">
      <div class='row'>
        <div class='col-md-2'>
          <%= image_tag @post.get_post_image, style: "border-radius: 15%; width: 200px; height: 200px; object-fit:cover;" %>
        </div>
        <div class='col-md-3'>
          <%= @post.title %>
        </div>
        <div class='col-md-7'></div>
      </div>
      <div class='row p-5'>
        <%= @post.content %>
      </div>
      <div class='row p-5'>
        <span>
          <%= link_to admin_user_user_favorite_posts_path(@user), style: "color: #0dcaf0; text-decoration: none" do %>
            いいね数（<%= @post.favorites.count %>）
          <% end %>
          コメント数（<%= @post.comments.count %>）
        </span>
      </div>
    </div>

    <div class="col-md-2">
      <div class='row'>
        <%= link_to admin_user_path(@user) do %>
          <%= image_tag @user.get_profile_image, class: "rounded-circle", size:'100x100' %>
        <% end %>
      </div>
      <div class='row p-4'>
        <%= link_to admin_user_path(@user), style: "color: #0dcaf0" do %>
          <%= @user.name %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row" style="height: 400px">
    <div class="col-md-5 offset-md-3 pl-3">
      <%= render "admin/comments/index", post: @post %>
    </div>
  </div>
</div>