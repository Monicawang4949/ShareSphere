<% if obj.errors.any? %>
  <div id="error_explanation" style="color: #dc3545">
    <h3><%= pluralize(obj.errors.count,"件") %> のエラーが発生しました</h3>
    <ul>
      <% obj.errors.full_messages.each do |message| %>
        <li style="list-style:none;"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>