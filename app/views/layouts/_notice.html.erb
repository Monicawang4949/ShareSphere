<% if notice %>
  <p class="m-5 alert alert-primary alert-dismissible mx-auto text-center" id="notice">
    <strong class="flash-message"><%= notice %></strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </p>
<% elsif alert %>
  <p class="m-5 alert alert-primary alert-dismissible mx-auto text-center" id="alert">
    <strong class="flash-message"><%= alert %></strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </p>
<% end %>