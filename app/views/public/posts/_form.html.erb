<%= form_with model:post, local:true do |f| %>
  <%= render 'layouts/errors', obj: obj %>
  <div class="form-group">
    <%= image_tag post.get_post_image, style: "border-radius: 15%; width: 200px; height: 200px; object-fit:cover;" %>
    <%= f.file_field :post_image, class: "form-control-file post_image", accept: 'image/*' %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control title" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control introduction" %>
  </div>
  <div class="form-group">
    <%= f.submit '投稿',class: 'btn btn-success' %>
  </div>
<% end %>