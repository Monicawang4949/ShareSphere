<%= form_with model:post, local:true do |f| %>
  <%= render 'layouts/errors', obj: obj %>
  <div class="form-group">
    <%= image_tag post.get_post_image, style: "border-radius: 15%; width: 200px; height: 200px; object-fit:cover;" %>
    <%= f.file_field :post_image, class: "form-control-file m-5", accept: 'image/*' %>
  </div>
  <div class="form-group m-4">
    <p>タイトル</p>
    <%= f.text_field :title, class: "form-control form-control-lg" %>
  </div>
  <div class="form-group m-4">
    <p>コンテンツ</p>
    <%= f.text_area :content, class: "form-control form-control-lg", style: 'height: 100px' %>
  </div>
  <div class="form-group m-4">
    <%= f.label "タグ（複数の場合半角「,」で区分してください）" %>
    <%= f.text_field :tag_name,value: @tag_list, class: 'form-control form-control-lg' %>
  </div>
  <div class="form-group m-5">
    <%= f.submit '投稿',class: 'btn btn-outline-info', style: 'width: 40%' %>
  </div>
<% end %>