<div class="container-fluid justify-content-center">
  <div class="row">

    <div class="col-md-2 offset-md-1" style="background: blue">
      <%= render 'sidebar' %>
    </div>

    <div class="col-md-7 offset-md-1">
      <%= form_with model:@user, local:true do |f| %>
        <%= render 'layouts/errors', obj: @user %>
        <div class="form-group">
          <%= image_tag @user.get_profile_image, class: "rounded-circle", size:'100x100' %>
          <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction %>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit '変更保存',class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>

  </div>
</div>