<div class="container-fluid text-center" style="color: white">
  <div class="row">

    <div class="col-md-2 offset-md-1">
      <%= render 'sidebar' %>
    </div>

    <div class="col-md-6">
      <%= form_with model:@user, local:true do |f| %>
        <%= render 'layouts/errors', obj: @user %>
        <div class="form-group">
          <%= image_tag @user.get_profile_image, class: "rounded-circle", size:'200x200' %>
          <%= f.file_field :profile_image, class: "form-control-file m-5", accept: 'image/*' %>
        </div>
        <div class="form-group m-5">
          <p>ユーザー名</p>
          <%= f.text_field :name, class: "form-control form-control-lg" %>
        </div>
        <div class="form-group m-5">
          <p>自己紹介文</p>
          <%= f.text_area :introduction, class: "form-control form-control-lg", style: 'height: 200px' %>
        </div>
        <div class="form-group m-5">
          <%= f.submit '変更保存',class: 'btn btn-outline-info', style: 'width: 40%' %>
        </div>
      <% end %>
    </div>

  </div>
</div>