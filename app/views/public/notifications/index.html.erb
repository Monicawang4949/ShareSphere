<div class="container-fluid text-center" style="color: white">
  <div class="row">

    <div class="col-md-2 offset-md-1">
      <%= render 'public/users/sidebar',class:"text-center" %>
    </div>

    <div class="col-md-8">
      <div class="row">
        <h2 class="col-md-5 p-4">通知一覧</h2>
      </div>
      <div class="row">
        <div class='col' style="height: 700px; overflow-y: scroll; color: white; font-size: 18px">
          <% if @notifications.present? %>
            <%= link_to "全削除",notification_path(@notifications), method: :delete,class:"btn btn-outline-info" %>
            <% @notifications.each do |notification| %>
              <div class="row m-4"><%= render "public/notifications/#{notification.notifiable_type}", notification: notification %></div>
            <% end %>
          <% else %>
            <p class="row ml-5 p-5">通知はありません</p>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>